		<listener-class>rvl.gm.utility.PulisciDesktop</listener-class>
	</listener>

	
	<session-config>
		<timer-keep-alive>true</timer-keep-alive>
	</session-config>
	
	<language-config>
        <addon-uri>/WEB-INF/gmaps.xml</addon-uri>
    </language-config>
    
